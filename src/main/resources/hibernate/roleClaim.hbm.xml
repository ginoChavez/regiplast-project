<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="regiplast.domain.entity">
	<class name="RoleClaim" table="role_claim">
        <id name="id" column="id">
            <generator class="native"/>
        </id>
        <property name="type" column="claim_type" />
        <property name="value" column="claim_value" />
        <many-to-one name="role" class="regiplast.domain.entity.Role" column="role_id" not-null="true"/>
    </class> 
</hibernate-mapping>