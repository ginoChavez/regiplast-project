<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="regiplast.domain.entity">
	<class name="User" table="user">
        <id name="id" column="id">
            <generator class="native"/>
        </id>
        <property name="name" column="user_name"/>
        <property name="password" column="password"/>
        <many-to-one name="person" class="regiplast.domain.entity.Person" column="person_id" not-null="true"/>
        <many-to-one name="role" class="regiplast.domain.entity.Role" column="role_id" not-null="true"/>
    </class> 
</hibernate-mapping>